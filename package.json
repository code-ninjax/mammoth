{
  "name": "mammoth",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "smart-contracts",
    "mammoth-sdk",
    "mammoth-node"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "contracts:compile": "npm run -w smart-contracts compile",
    "contracts:test": "npm run -w smart-contracts test",
    "contracts:demo": "npm run -w smart-contracts demo:local",
    "contracts:deploy:bdag": "npm run -w smart-contracts deploy:bdag",
    "sdk:build": "npm run -w mammoth-sdk build",
    "sdk:test": "npm run -w mammoth-sdk test",
    "node:start": "npm run -w mammoth-node start",
    "node:clean": "npm run -w mammoth-node clean"
  },
  "dependencies": {
    "@coinbase/wallet-sdk": "^4.3.7",
    "@wagmi/connectors": "^7.0.2",
    "@wagmi/core": "^3.0.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0",
    "viem": "^2.41.2",
    "wagmi": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
